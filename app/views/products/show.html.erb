<h1>show</h1>
<%= render_breadcrumbs separator: ' > ' %>
<hr>
<p>ID：<%= @product.id %></p>
<p>価格：<%= @product.price %></p>
<p>商品名：<%= @product.p_name %></p>
<p>商品詳細：<%= @product.description %></p>
<p>カテゴリー:<%= link_to @product.category.category_name, "/categories/#{@product.category_id}" %></p>
<div>
  <% if @product.image? %>
    <div><%= image_tag @product.image.url%></div>
  <% else %>
    <div><%= image_tag 'noimage.gif' %></div>
  <% end %>
</div>
<p>

<%
=begin
%>
  <% if current_user.id == @product.user_id %>
  <%= link_to '編集', edit_product_path(@product) %> |
    <%= link_to '削除', @product, method: :delete, data: {confirm: '削除してもいいですか？'} %>
  <% end %>
<%
=end
%>

</p>
