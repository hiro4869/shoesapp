<div class="product_show" >
  <div class="product_render">
    <%= render_breadcrumbs separator: ' > ' %>
  </div>
  <div class="product_show_contents">
    <div class="product_show_name">
      <h1><%= @product.p_name %></h1>
    </div>

    <!-- SNSシェアボタン -->
    <p><%= link_to "Twitterでシェアする", "http://twitter.com/share?url=http://shoescraft.com/products/#{@product.id}", :target=>["_blank"] %></p>
    <p><%= link_to "Facebookでシェアする", "https://www.facebook.com/sharer/sharer.php?u=http://shoescraft.com/products/#{@product.id}", :target=>["_blank"] %></p>
    <p><%= link_to "LINEでシェアする", "http://line.me/R/msg/text/?http://shoescraft.com/products/#{@product.id}", :target=>["_blank"] %></p>

    <div class="product_image_show_maine">
      <% @product.product_images.each do |picture| %>
       <%= image_tag picture.image %>
      <% end %>
  　</div>
  </div>
  <div class="product_detailed_box">
    <p>価格：<%= @product.price %></p>
    <p>商品名：<%= @product.p_name %></p>
    
    <!-- 商品サブタイトルが設定されている場合に表示 -->
    <% if @product.sub_name.present?%>
      <p>商品サブタイトル：<%= @product.sub_name %></p>
    <% end %>

    <p>カテゴリー:<%= link_to @product.category.category_name, "/categories/#{@product.category_id}", class: "contents_link" %></p>


    <!-- ブランドが設定されている場合に表示 -->
    <% if @product.brand.present? %>
      <p>ブランド：<%= link_to @product.brand.brand_name, brand_path(@product.brand.id), class: "contents_link" %></p>
    <% end %>

    <!-- 甲革が設定されている場合に表示 -->
    <% if @product.upper_leather.present?%>
      <p>甲革：<%= @product.upper_leather %></p>
    <% end %>
    
    <!-- 表底が設定されている場合に表示 -->
    <% if @product.outsole.present?%>
      <p>表底：<%= @product.outsole %></p>
    <% end %>
    
    <!-- 踵が設定されている場合に表示 -->
    <% if @product.heel.present?%>
      <p>踵：<%= @product.heel %></p>
    <% end %>
    
    <!-- 製法：が設定されている場合に表示 -->
    <% if @product.process.present?%>
      <p>製法：<%= @product.process %></p>
    <% end %>
    
    <!-- 修理が設定されている場合に表示 -->
    <% if @product.repair.present?%>
      <p>修理：<%= @product.repair %></p>
    <% end %>
    
    <!-- ウィズが設定されている場合に表示 -->
    <% if @product.width.present?%>
      <p>ウィズ(足囲)：<%= @product.width %></p>
    <% end %>
    
    <!-- 原産国が設定されている場合に表示 -->
    <% if @product.made_in.present?%>
      <p>原産国：<%= @product.made_in %></p>
    <% end %>
    
    <!-- メーカー説明が設定されている場合に表示 -->
    <% if @product.maker_description.present?%>
      <p>メーカー説明：<%= @product.maker_description %></p>
    <% end %>
    
    <!-- 商品コードが設定されている場合に表示 -->
    <% if @product.product_code.present?%>
      <p>商品コード：<%= @product.product_code %></p>
    <% end %>    


  </div>
  <div class="product_detailed_description">
    <!-- 商品詳細が設定されている場合に表示 -->
    <% if @product.description.present?%>
      <p>商品詳細：<%= @product.description %></p>
    <% end %>
  </div>


<!-- ここからsize・colorを選択のページになります -->
<div class="container product_varieties_select">
<h2 class="product_varieties_scname">size・colorを選択してください</h2>
 <div class=”table-responsive”>
    <table class="table table-striped table-bordered">
      <thead>
        <tr>
          <th>ID</th>
          <th>画像</th>
          <th>色</th>
          <th>サイズ</th>
          <th>選択してください</th>
        </tr>
      </thead>
      <tbody>
       <% @product.product_varieties.each do |item| %>
          <tr>
            <th scope="row"><%= @product.id  %></th>
            <td>
              <div>
                <% if item.product_variety_images.present? %>
                  <div class="product_varieties_list_images">
                    <%= image_tag item.product_variety_images.first.image %>
                  </div>
                <% else %>
                  <div><%= image_tag 'noimage.gif' %></div>
                <% end %>
              </div>
            </td>
            <td><%= item.color %></td>
            <td><%= item.size %></td>
            <td><button type="button" class="btn btn-default"><%= link_to "詳細を見る", product_product_variety_path(params[:id], item.id) %></button></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
        
