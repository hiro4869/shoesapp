<h1>show</h1>
<%= render_breadcrumbs separator: ' > ' %>
<hr>
<p>ID：<%= @product.id %></p>
<p>価格：<%= @product.price %></p>
<p>商品名：<%= @product.p_name %></p>
<p>商品詳細：<%= @product.description %></p>
<p>カテゴリー:<%= link_to @product.category.category_name, "/categories/#{@product.category_id}" %></p>
<div>
  <% if @product.image? %>
    <div><%= image_tag @product.image.url%></div>
  <% else %>
    <div><%= image_tag 'noimage.gif' %></div>
  <% end %>
</div>


<% if user_signed_in? %>
  <%= form_for @cart ,url: "/users/#{current_user.id}/carts" ,method: :post do |f| %>
    <p>購入数</p>
    <p><%= f.text_field :quantity %></p>
    <%= f.hidden_field :product_id, :value => @product.id  %>
    <br/>
    <p><%= f.submit "カートに入れる", class: "btn btn-primary" %></p>
  <% end %>
<% else %>
  <p><%= link_to "ログインしてカートに入れる", new_user_session_path, class: "btn btn-primary" %></p>
<% end %>

<hr>
<h2>色・サイズ等（テスト中）</h2>
<% @product.product_varieties.each do |item| %>
  <p>色:<%= item.color %></p>
  <p>サイズ:<%= item.size %></p>
  <p>価格:<%= item.price %></p>
  <p><%= link_to "詳細を見る", product_product_variety_path(params[:id], item.id) %></p>
  <p>---------------------------</p>
<% end %>
