<div class="product_show" >
 <div class="product_render">
  <%= render_breadcrumbs separator: ' > ' %>
 </div>
  <dev class="product_show_contents">
  <dev class="product_show_name">
  <h1><%= @product.p_name %></h1>
  </dev>
  <p>ID：<%= @product.id %></p>

<div>
  <% if @product.image? %>
    <div><%= image_tag @product.image.url%></div>
  <% else %>
    <div><%= image_tag 'noimage.gif' %></div>
  <% end %>
</div>
<p>価格：<%= @product.price %></p>
<p>商品名：<%= @product.p_name %></p>
<p>商品詳細：<%= @product.description %></p>
<p>カテゴリー:<%= link_to @product.category.category_name, "/categories/#{@product.category_id}" %></p>
</dev>


<hr>
<h2>sizec・oler選択してください</h2>
<% @product.product_varieties.each do |item| %>
  <p>色:<%= item.color %></p>
  <p>サイズ:<%= item.size %></p>
  <p>価格:<%= item.price %></p>
  <p><%= link_to "詳細を見る", product_product_variety_path(params[:id], item.id) %></p>
  <p>---------------------------</p>


<% end %>

<div class="container product_varieties_select">
 <div class=”table-responsive”>
  <table class="table table-striped table-bordered">
    <thead>
    <% @product.product_varieties.each do |item| %>
      <tr>
        <th>#</th>
        <th>画像</th>
        <th>色</th>
        <th>サイズ</th>
        <th>価格</th>
        <th>#</th>
        </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row"><%= @product.id  %></th>
          <td>画像</td>
          <td><p><%= item.color %></p></td>
          <td><p><%= item.size %></p></td>
          <td><p>¥<%= item.price %></p></td>
          <td><button type="button" class="btn btn-default"><%= link_to "詳細を見る", product_product_variety_path(params[:id], item.id) %></p></button></td>
          
        </tr>
      </tbody>
    </table>
   <% end %>
  </div>
</div>