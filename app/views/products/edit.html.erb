<h1>編集</h1>
<%= render_breadcrumbs separator: ' > ' %>
<%= render 'form' %>
<br>
<div>
  <% if @product.product_images.present? %>
    <div>
      <% @product.product_images.each do |picture| %>
        <%= image_tag picture.image %>
        <%= link_to "削除", product_product_image_path(@product.id ,picture.id), method: :delete %>
        <br>
      <% end %>
    </div>
  <% else %>
    <div><%= image_tag 'noimage.gif' %></div>
  <% end %>
</div>
<p><%= link_to "削除する", "/products/#{@product.id}",method: :delete %></p>

<hr>
<h2>色・サイズ</h2>
<br/>

<p><%= link_to "商品の色・サイズを新しく追加する", new_product_product_variety_path(params[:id]) %></p>


<% @product_varieties.each do |item| %>
  <p>色：<%= item.color %></p>
  <p>サイズ：<%= item.size %></p>
  <p>価格：<%= item.price %></p>
  <% if item.stock %>
    <p>在庫:あり</p>
  <% else %>
    <p>在庫:なし</p>
  <% end %>

  <p><%= link_to "編集", edit_product_product_variety_path(params[:id],item.id) %></p>
  <p><%= link_to "削除", "/products/#{params[:id]}/product_varieties/#{item.id}", method: :delete, data: { confirm: '削除しますか？' }  %></p>
  <p>----------------</p>
<% end %>

<%= link_to "Home", root_path %>
