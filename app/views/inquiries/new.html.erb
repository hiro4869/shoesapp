<div class="inquiry">
  <div class="inquiry-box">
    <h1 class="inquiry-title">お問い合わせ</h1>
    <%= form_for @inquiry do |f| %>
      <div class="inquiry-inner-box">
      <span class="col-sm-4">タイトル</span>
      <p><%= f.text_field :title,class: "col-sm-6 inquiry-textbox" %></p>
      </div>
      <br>
      <div class="inquiry-inner-box">
      <span class="col-sm-4">氏名</span>
      <p><%= f.text_field :name, class: "col-sm-6 inquiry-textbox" %></p>
      </div>
      <br>
      <div class="inquiry-inner-box">
      <span class="col-sm-4">Eメール</span>
      <p><%= f.text_field :email,  class: "col-sm-6 inquiry-textbox" %></p>
      </div>
      <br>
      <div class="inquiry-inner-box-under">
      <span class="col-sm-4">内容</span>
      <p><%= f.text_area :body,  class: "col-sm-6 inquiry-textbox" %></p>
      </div>
      <br>
      <p class="inquiry-inner-box"><%= f.submit "　送信する　", class: "btn btn-primary btn-lg" %></p>
    <% end %>
  </div>
</div>
